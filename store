    <div id="toast">Texto copiado com sucesso!</div>

    <script>
        // --- VARI√ÅVEIS & UPDATES ---
        function updateTexts() {
            const map = {
                agentName: document.getElementById('agentName').value || "[Seu Nome]",
                clientName: document.getElementById('clientName').value || "[Nome]",
                product: document.getElementById('product').value || "[Produto]",
                ticketNumber: document.getElementById('ticketNumber').value || "XXXXXXXX",
                valueAmount: document.getElementById('valueAmount').value || "[Valor]",
                cardLast4: document.getElementById('cardLast4').value || "XXXX",
                endTime: document.getElementById('endTime').value || "XX:XX"
            };

            for (const [key, value] of Object.entries(map)) {
                document.querySelectorAll(`.var.${key}`).forEach(el => el.textContent = value);
            }
        }

        function resetForm() {
            document.querySelectorAll('aside input').forEach(input => input.value = '');
            updateTexts();
        }

        // --- TABS SYSTEM ---
        function openTab(tabId) {
            // Hide contents
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            // Reset buttons
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            
            // Activate logic
            document.getElementById(tabId).classList.add('active');
            
            // Find button that calls this function (trick to avoid passing 'this')
            const buttons = document.querySelectorAll('.tab-btn');
            if(tabId === 'tool') buttons[0].classList.add('active');
            if(tabId === 'kb') buttons[1].classList.add('active');
            if(tabId === 'procedures') buttons[2].classList.add('active');
        }

        // --- FILTER SEARCH ---
        function filterContent() {
            const filter = document.getElementById('searchBox').value.toLowerCase();
            const activeTab = document.querySelector('.tab-content.active');
            
            // Search in Cards, Doc Blocks and KB Items within the active tab
            const items = activeTab.querySelectorAll('.card, .doc-block, .kb-item');

            items.forEach(item => {
                const text = item.innerText.toLowerCase();
                const keywords = item.getAttribute('data-keywords') || "";
                
                if (text.includes(filter) || keywords.includes(filter)) {
                    item.style.display = "";
                } else {
                    item.style.display = "none";
                }
            });
        }

        // --- COPY FUNCTION ---
        function copyText(btn) {
            const card = btn.closest('.card');
            const text = card.querySelector('.card-text').innerText;
            
            navigator.clipboard.writeText(text).then(() => {
                showToast();
                // Visual feedback on button
                const originalText = btn.innerText;
                btn.innerText = "Copiado!";
                btn.style.background = "#107c10";
                btn.style.color = "#fff";
                
                setTimeout(() => {
                    btn.innerText = originalText;
                    btn.style.background = "";
                    btn.style.color = "";
                }, 2000);
            });
        }

        function showToast() {
            const toast = document.getElementById("toast");
            toast.className = "show";
            setTimeout(() => { toast.className = toast.className.replace("show", ""); }, 3000);
        }

        // Initialize placeholders
        updateTexts();
    </script>
</body>
</html>
