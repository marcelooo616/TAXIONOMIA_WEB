Sub CriarGerador()
    Dim caminhoArquivo As String
    Dim numArquivo As Integer
    Dim conteudoScript As String
    
    caminhoArquivo = CreateObject("WScript.Shell").SpecialFolders("Desktop") & "\ManterAtivo.vbs"
    
    conteudoScript = "Set wsc = CreateObject(""WScript.Shell"")" & vbCrLf
    conteudoScript = conteudoScript & "Do" & vbCrLf
    conteudoScript = conteudoScript & "WScript.Sleep(60000)" & vbCrLf
    conteudoScript = conteudoScript & "wsc.SendKeys(""{SCROLLLOCK}"")" & vbCrLf
    conteudoScript = conteudoScript & "wsc.SendKeys(""{SCROLLLOCK}"")" & vbCrLf
    conteudoScript = conteudoScript & "Loop"

    numArquivo = FreeFile
    
    Open caminhoArquivo For Output As #numArquivo
    Print #numArquivo, conteudoScript
    Close #numArquivo
    
    MsgBox "Arquivo criado na √Årea de Trabalho."
End Sub
